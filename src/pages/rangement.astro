---
import Layout from '../layouts/Layout.astro';
import CategoryHeader from '../components/CategoryHeader.astro';
import ProductCardSimple from '../components/ProductCardSimple.astro';

const products = [
  { name: "ARMOIRE HAUTE", type: "Rangement Métallique", image: "/storage/high-cabinet.jpg", href: "/rangement/armoire-haute" },
  { name: "CAISSON MOBILE", type: "Rangement Bureau", image: "/storage/pedestal.jpg", href: "/rangement/caisson" },
  { name: "BIBLIOTHÈQUE PRO", type: "Rayonnage", image: "/storage/bookshelf.jpg", href: "/rangement/bibliotheque" },
  { name: "VESTIAIRE", type: "Rangement Personnel", image: "/storage/locker.jpg", href: "/rangement/vestiaire" },
];
---

<Layout title="Solutions de Rangement | KWESK">
  <CategoryHeader 
    title="Rangement" 
    description="Optimisez votre espace avec nos solutions de stockage robustes et intelligentes."
    image="/home-categories/rangement.jpg"
  />

  <section class="product-section">
    <div class="product-container">
      <div class="product-grid">
        {products.map(p => <ProductCardSimple {...p} />)}
      </div>
    </div>
  </section>
</Layout>

<style>
  .product-section { padding: 80px 0; background: white; }
  .product-container { max-width: 1400px; margin: 0 auto; padding: 0 60px; }
  .product-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 40px 30px; }
  @media (max-width: 1100px) { .product-grid { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 768px) { 
    .product-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
    .product-container { padding: 0 20px; }
  }
</style>