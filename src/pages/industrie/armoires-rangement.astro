---
import Layout from '../../layouts/Layout.astro';

const images = [
  "/industrie/casiers-vestiaire/11.webp",
];

const variants = [
  { name: "ARMOIRE PERFO", type: "Portes Perforées" },
  { name: "ARMOIRE VITRÉE", type: "Portes Vitrées" },
];
---

<Layout title="Armoires Outils & Rangement | Mobilier Industriel Professionnel - Kwesk" description="Armoires d'atelier à fond perforés par Kwesk. Rangement professionnel pour outillage, industrie et ateliers au Maroc.">
  <main>
    
    <!-- Hero -->
    <section class="hero">
      <img src="/industrie/casiers-vestiaire/11.webp" alt="Armoires Outils & Rangement" />
    </section>

    <!-- Product Info -->
    <section class="product">
      <div class="product__container">
        <div class="product__grid">

          <!-- Gallery -->
          <div class="product__gallery">
            <div class="product__main">
              <button class="product__arrow product__arrow--left" id="prevBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              <img src={images[0]} alt="Armoire Atelier" id="mainImage" />
              <button class="product__arrow product__arrow--right" id="nextBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            </div>
            <div class="product__thumbs">
              {images.map((img, i) => (
                <button 
                  class={`product__thumb ${i === 0 ? 'active' : ''}`}
                  data-index={i}
                >
                  <img src={img} alt={`Armoire Atelier vue ${i + 1}`} />
                </button>
              ))}
            </div>
          </div>

          <!-- Info -->
          <div class="product__info">
            <h1 class="product__title">ARMOIRES OUTILS & RANGEMENT</h1>
            <p class="product__subtitle">Armoire d'atelier perforés pour un rangement de votre outillage</p>
            <p class="product__desc">
              Pour le rangement ordonné et sécurisé des petites pièces et des outils. Armoires idéal pour l'industrie et les ateliers. Construction monobloc solide en tôle d'acier soudée. Fond perforé sur l'ensemble de la surface. Modèle vendu nue, à équiper selon le besoin.
            </p>

            <div class="product__versions">
              <span class="product__version-label">Versions disponibles</span>
              <div class="product__versions-list">
                {variants.map((variant) => (
                  <p class="product__version-name"><strong>{variant.name}</strong> {variant.type}</p>
                ))}
              </div>
            </div>

            <a href="/contact" class="product__btn">DEMANDER UN DEVIS</a>
          </div>

        </div>
      </div>
    </section>

    <!-- Standard Features -->
    <section class="features">
      <div class="features__container">
        <h2 class="features__title">CARACTÉRISTIQUES STANDARD</h2>
        <ul class="features__list">
          <li><span>✓</span> Armoire à fond perforé sur l'ensemble de la surface pour un rangement ordonné</li>
          <li><span>✓</span> Construction monobloc solide en tôle d'acier soudée</li>
          <li><span>✓</span> Armoire sécurisé par fermeture à serrure de sûreté trois points à cylindre</li>
          <li><span>✓</span> Tablettes réglable au pas de 10 mm</li>
          <li><span>✓</span> Portes au choix : à panneaux perforés ou vitrés</li>
          <li><span>✓</span> Angle d'ouverture des portes de plus de 200°</li>
          <li><span>✓</span> Portes renforcées à double paroi</li>
          <li><span>✓</span> Fermeture par serrure de sûreté trois points à cylindre (livrée avec 2 clés)</li>
        </ul>
      </div>
    </section>

    <!-- Specifications -->
    <section class="specs">
      <div class="specs__container">
        <h2 class="specs__title">SPÉCIFICATIONS TECHNIQUES</h2>
        <div class="specs__grid">
          <div class="specs__item">
            <span class="specs__label">Hauteur disponible</span>
            <span class="specs__value">1950 mm avec 2 tablettes</span>
          </div>
          <div class="specs__item">
            <span class="specs__label">Capacité de charge</span>
            <span class="specs__value">80 kg par tablette (uniformément répartie)</span>
          </div>
          <div class="specs__item">
            <span class="specs__label">Réglage tablettes</span>
            <span class="specs__value">Au pas de 10 mm</span>
          </div>
          <div class="specs__item">
            <span class="specs__label">Angle d'ouverture</span>
            <span class="specs__value">Plus de 200°</span>
          </div>
        </div>
      </div>
    </section>


  </main>
</Layout>

<style>
  .hero {
    width: 100%;
    height: 50vh;
    min-height: 400px;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product {
    padding: 100px 0;
  }

  .product__container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .product__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .product__gallery {
    position: relative;
  }

  .product__main {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
  }

  .product__main img {
    max-width: 100%;
    max-height: 400px;
    object-fit: contain;
  }

  .product__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    color: #a8a29e;
    transition: color 0.3s ease;
  }

  .product__arrow:hover {
    color: #1c1917;
  }

  .product__arrow--left {
    left: 0;
  }

  .product__arrow--right {
    right: 0;
  }

  .product__arrow svg {
    width: 24px;
    height: 24px;
  }

  .product__thumbs {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-top: 30px;
    flex-wrap: wrap;
  }

  .product__thumb {
    width: 70px;
    height: 70px;
    padding: 8px;
    border: 1px solid #e7e5e4;
    background: white;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .product__thumb:hover,
  .product__thumb.active {
    border-color: #8b8b4b;
  }

  .product__thumb img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .product__info {
    padding-top: 40px;
  }

  .product__title {
    font-size: 38px;
    font-weight: 700;
    color: #1c1917;
  }

  .product__subtitle {
    font-size: 16px;
    color: #57534e;
    margin-top: 10px;
  }

  .product__desc {
    font-size: 15px;
    color: #78716c;
    line-height: 1.8;
    margin-top: 20px;
  }

  .product__versions {
    margin-top: 40px;
  }

  .product__version-label {
    display: block;
    font-size: 12px;
    color: #a8a29e;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .product__versions-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .product__version-name {
    font-size: 14px;
    color: #1c1917;
  }

  .product__btn {
    display: inline-block;
    padding: 16px 40px;
    background-color: #8b8b4b;
    color: white;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-decoration: none;
    margin-top: 40px;
    transition: opacity 0.3s ease;
  }

  .product__btn:hover {
    opacity: 0.9;
  }

  .features {
    padding: 80px 0;
    border-top: 1px solid #e7e5e4;
  }

  .features__container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .features__title {
    font-size: 28px;
    font-weight: 700;
    color: #1c1917;
    margin-bottom: 30px;
  }

  .features__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features__list li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 14px;
    color: #57534e;
    line-height: 1.8;
    margin-bottom: 12px;
  }

  .features__list li span {
    color: #8b8b4b;
    font-weight: 600;
  }

  .specs {
    padding: 80px 0;
    border-top: 1px solid #e7e5e4;
    background: #fafaf9;
  }

  .specs__container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .specs__title {
    font-size: 28px;
    font-weight: 700;
    color: #1c1917;
    margin-bottom: 40px;
  }

  .specs__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .specs__item {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 20px;
    background: white;
    border: 1px solid #e7e5e4;
  }

  .specs__label {
    font-size: 12px;
    color: #a8a29e;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .specs__value {
    font-size: 16px;
    color: #1c1917;
    font-weight: 600;
  }

  .colors {
    padding: 80px 0;
    border-top: 1px solid #e7e5e4;
  }

  .colors__container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .colors__title {
    font-size: 28px;
    font-weight: 700;
    color: #1c1917;
    margin-bottom: 20px;
  }

  .colors__desc {
    font-size: 14px;
    color: #78716c;
    line-height: 1.7;
    margin-bottom: 30px;
  }

  .colors__image {
    max-width: 100%;
  }

  @media (max-width: 900px) {
    .product__container,
    .features__container,
    .specs__container,
    .colors__container {
      padding: 0 30px;
    }

    .product__grid {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .product {
      padding: 60px 0;
    }

    .product__title {
      font-size: 28px;
    }

    .product__thumbs {
      gap: 8px;
    }

    .product__thumb {
      width: 55px;
      height: 55px;
      padding: 6px;
    }

    .specs__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script define:vars={{ images }}>
  let currentIndex = 0;
  const allImages = images;

  const mainImage = document.getElementById('mainImage');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const thumbs = document.querySelectorAll('.product__thumb');

  function updateImage(index) {
    currentIndex = index;
    if (mainImage) {
      mainImage.src = allImages[index];
    }
    thumbs.forEach((thumb, i) => {
      thumb.classList.toggle('active', i === index);
    });
  }

  prevBtn?.addEventListener('click', () => {
    const newIndex = currentIndex === 0 ? allImages.length - 1 : currentIndex - 1;
    updateImage(newIndex);
  });

  nextBtn?.addEventListener('click', () => {
    const newIndex = currentIndex === allImages.length - 1 ? 0 : currentIndex + 1;
    updateImage(newIndex);
  });

  thumbs.forEach((thumb, i) => {
    thumb.addEventListener('click', () => {
      updateImage(i);
    });
  });
</script>