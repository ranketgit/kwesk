---
import Layout from '../layouts/Layout.astro';
import CategoryHeader from '../components/CategoryHeader.astro';
import ProductCardSimple from '../components/ProductCardSimple.astro';

const products = [
  { name: "CHALLENGER 175", type: "Chaise Manager", image: "/chairs/challenger.png", href: "/challenger" },
  { name: "GAMMA 150", type: "Chaise Opérateur", image: "/chairs/gamma.jpg", href: "/gamma" },
  { name: "WINNER 125", type: "Chaise Opérateur", image: "/chairs/winner.jpg", href: "/winner-125" },
  { name: "EXCLUSIVE 500", type: "Chaise Direction", image: "/chairs/exclusive.jpg", href: "/exclusive" },
];
---

<Layout title="Chaises de Bureau | KWESK">
  <CategoryHeader 
    title="Chaises de Bureau" 
    description="Confort ergonomique et durabilité pour une productivité maximale tout au long de la journée."
    image="/home-categories/chair.jpg"
  />

  <section class="product-section">
    <div class="product-container">
      <div class="product-grid">
        {products.map(p => <ProductCardSimple {...p} />)}
      </div>
    </div>
  </section>
</Layout>

<style>
  .product-section { 
    padding: 80px 0; 
    background: white; 
  }
  .product-container { 
    max-width: 1400px; 
    margin: 0 auto; 
    padding: 0 60px; 
  }
  .product-grid { 
    display: grid; 
    grid-template-columns: repeat(4, 1fr); 
    gap: 40px 30px; 
  }

  @media (max-width: 1100px) { 
    .product-grid {
      grid-template-columns: repeat(3, 1fr); 
    }
  }

  @media (max-width: 768px) { 
    .product-grid { 
      grid-template-columns: repeat(2, 1fr); 
      gap: 20px; 
    }
    .product-container { 
      padding: 0 20px; 
    }
  }
</style>