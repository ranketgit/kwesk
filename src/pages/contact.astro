---
// pages/contact.astro
import Layout from '../layouts/Layout.astro';
import ContactHero from '../components/contact/ContactHero.astro';
import ContactInfo from '../components/contact/ContactInfo.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import ContactMap from '../components/contact/ContactMap.astro';
---

<Layout title="Contact Kwesk | Devis Aménagement de Bureau Maroc" description="Contactez Kwesk pour vos projets d'aménagement de bureau au Maroc. Devis gratuit pour mobilier de bureaux, fauteuils et chaises professionnels.">
  <main>
    
    <div class="sticky top-0 h-[70vh] w-full">
      <img 
        src="/contact-hero.jpg" 
        alt="Chaises KWESK" 
        class="w-full h-full object-cover"
      />
    </div>

    <div class="relative bg-white z-10">

      <ContactHero />

      <ContactInfo />

      <ContactForm />

      <ContactMap />

    </div>

  </main>
</Layout>
