---
// components/Footer.astro
const currentYear = new Date().getFullYear();

const chairLinks = [
  { label: "Challenger 175", href: "/challenger" },
  { label: "Gamma 150", href: "/gamma" },
  { label: "Gamma C", href: "/gamma-c" },

  { label: "Corpo 100", href: "/corpo-100" },
  { label: "Exclusive 500", href: "/exclusive" },
  { label: "Exclusive G", href: "/exclusive-g" },
  { label: "BY 100", href: "/by-100" },
  { label: "BY G", href: "/by-g" },
  { label: "Caddy 80", href: "/caddy" },
];

const companyLinks = [
  { label: "Accueil", href: "/" },
  { label: "À Propos", href: "/a-propos" },
  { label: "Contact", href: "/contact" },
];
---

<footer class="footer">
  <div class="footer__container">
    
    <!-- Top Section -->
    <div class="footer__top">
      
      <!-- Logo & Description -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <img src="/kwesk-logo.png" alt="KWESK" />
        </a>
        <p class="footer__desc">
          KWESK conçoit et fabrique des chaises pour une utilisation intensive au bureau ou à la maison. Leader des chaises corporate depuis 2008.
        </p>
        
        <!-- Certifications -->
        <div class="footer__certs">
          <div class="footer__cert">
            <img src="/bifma-about.png" alt="BIFMA Certified" />
            <span>BIFMA 2011</span>
          </div>
          <div class="footer__cert">
            <img src="/eu-about.png" alt="EU EN 1335 Certified" />
            <span>EN 1335 2016</span>
          </div>
        </div>
      </div>

      <!-- Chairs Links -->
      <div class="footer__column">
        <h4 class="footer__column-title">Nos Chaises</h4>
        <ul class="footer__links">
          {chairLinks.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div class="footer__column">
        <h4 class="footer__column-title">Entreprise</h4>
        <ul class="footer__links">
          {companyLinks.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__column">
        <h4 class="footer__column-title">Contact</h4>
        <div class="footer__contact">
          <div class="footer__contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <p>KWESK
              Anfa Place
              <br />Tour Ouest, Niv 1 Anfa Place
              bd de la corniche, Ain diab
              20180, Casablanca</p>
          </div>
          <div class="footer__contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
            </svg>
            <p>+212 5 20 24 16 37</p>
          </div>
          <div class="footer__contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <p>contact@kwesk.com</p>
          </div>
        </div>
      </div>

    </div>

    <!-- Bottom Section -->
    <div class="footer__bottom">
      <p class="footer__copyright">
        © {currentYear} KWESK. Tous droits réservés.
      </p>
      <div class="footer__legal">
        <a href="/politique-de-confidentialite">Politique de confidentialité</a>
        <span class="footer__legal-separator">|</span>
        <a href="/conditions-utilisation">Conditions d'utilisation</a>
      </div>
    </div>

  </div>
</footer>

<style>
  .footer {
    background-color: #1c1917;
    color: white;
    padding-top: 80px;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .footer__top {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: 60px;
    padding-bottom: 60px;
    border-bottom: 1px solid #292524;
  }

  /* Brand */
  .footer__brand {
    padding-right: 40px;
  }

  .footer__logo img {
    height: 40px;
    filter: brightness(0) invert(1);
  }

  .footer__desc {
    font-size: 14px;
    color: #a8a29e;
    line-height: 1.8;
    margin-top: 25px;
  }

  /* Certifications */
  .footer__certs {
    display: flex;
    gap: 25px;
    margin-top: 30px;
    align-items: center;
  }

  .footer__cert {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .footer__cert img {
    width: 60px;
    height: 60px;
    object-fit: contain;
    border-radius: 12px;
  }

  .footer__cert span {
    font-size: 10px;
    color: #78716c;
  }

  /* Columns */
  .footer__column-title {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: white;
    margin-bottom: 25px;
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: 12px;
  }

  .footer__links a {
    font-size: 14px;
    color: #a8a29e;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__links a:hover {
    color: #8b8b4b;
  }

  /* Contact */
  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer__contact-item {
    display: flex;
    gap: 15px;
  }

  .footer__contact-item svg {
    width: 20px;
    height: 20px;
    color: #8b8b4b;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .footer__contact-item p {
    font-size: 14px;
    color: #a8a29e;
    line-height: 1.6;
  }

  /* Bottom */
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 0;
  }

  .footer__copyright {
    font-size: 13px;
    color: #78716c;
  }

  .footer__legal {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .footer__legal a {
    font-size: 13px;
    color: #78716c;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer__legal a:hover {
    color: #8b8b4b;
  }

  .footer__legal-separator {
    color: #78716c;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer__top {
      grid-template-columns: 1fr 1fr;
      gap: 50px;
    }

    .footer__brand {
      grid-column: span 2;
      padding-right: 0;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding-top: 60px;
    }

    .footer__container {
      padding: 0 30px;
    }

    .footer__top {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer__brand {
      grid-column: span 1;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .footer__legal {
      flex-direction: column;
      gap: 10px;
    }

    .footer__legal-separator {
      display: none;
    }
  }
</style>