---
import Layout from '../layouts/Layout.astro';
import CategoryHeader from '../components/CategoryHeader.astro';
import ProductCardSimple from '../components/ProductCardSimple.astro';

const products = [
  { name: "EXECUTIVE PRO", type: "Bureau de Direction", image: "/desks/direction.jpg", href: "/bureaux/direction" },
  { name: "OPTIMA 140", type: "Bureau Opératif", image: "/desks/operatif.jpg", href: "/bureaux/operatif" },
  { name: "TEAM BENCH", type: "Poste Multi-place", image: "/desks/bench.jpg", href: "/bureaux/bench" },
  { name: "ACTIVE DESK", type: "Bureau Réglable", image: "/desks/reglable.jpg", href: "/bureaux/reglables" },
];
---

<Layout title="Bureaux | KWESK">
  <CategoryHeader 
    title="Bureaux" 
    description="Des solutions de travail ergonomiques et esthétiques, conçues pour s'adapter à toutes les configurations d'espace."
    image="/home-categories/desk.jpg"
  />

  <section class="product-section">
    <div class="product-container">
      <div class="product-grid">
        {products.map(p => <ProductCardSimple {...p} />)}
      </div>
    </div>
  </section>
</Layout>

<style>
  .product-section { padding: 80px 0; background: white; }
  .product-container { max-width: 1400px; margin: 0 auto; padding: 0 60px; }
  .product-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 40px 30px; }
  @media (max-width: 1100px) { .product-grid { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 768px) { 
    .product-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
    .product-container { padding: 0 20px; }
  }
</style>