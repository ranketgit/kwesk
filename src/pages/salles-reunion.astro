---
// pages/salles-reunion.astro
import Layout from '../layouts/Layout.astro';
import CategoryHeader from '../components/CategoryHeader.astro';
import ProductCardSimple from '../components/ProductCardSimple.astro';

const products = [
  { name: "TABLE RÉUNION", type: "Tables de Réunion", image: "/reunion/mt1.jpg", href: "/reunion/table-de-reunion" },
  { name: "STATION MÉDIA", type: "Écrans & Supports", image: "/reunion/ec2.jpg", href: "/reunion/media" },
  { name: "ARMOIRE PRO", type: "Rangements Pro", image: "/reunion/r1.jpg", href: "/reunion/rangement" },
];
---

<Layout title="Aménagement Salles de Réunion | Mobilier Professionnel" description="Aménagement complet de salles de réunion. Mobilier de bureaux, tables et chaises professionnelles. Solutions clés en main pour entreprises - Kwesk Maroc.">
  <CategoryHeader 
    title="Salles de Réunion" 
    description="Créez des espaces d'échange inspirants avec notre mobilier dédié à la collaboration."
    image="/home-categories/reunion.jpg"
  />

  <section class="product-section">
    <div class="product-container">
      <div class="product-grid">
        {products.map(p => <ProductCardSimple {...p} />)}
      </div>
    </div>
  </section>
</Layout>

<style>
  .product-section { padding: 80px 0; background: white; }
  .product-container { max-width: 1400px; margin: 0 auto; padding: 0 60px; }
  .product-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 40px 30px; }
  @media (max-width: 1100px) { .product-grid { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 768px) { 
    .product-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
    .product-container { padding: 0 20px; }
  }
</style>
