---
// components/CategoryHeader.astro
const { title, description, image } = Astro.props;
---
<section class="cat-header">
  <div class="cat-header__container">
    <div class="cat-header__content">
      <span class="cat-header__label">Collection Professionnelle</span>
      <h1 class="cat-header__title">{title}</h1>
      <p class="cat-header__desc">{description}</p>
    </div>
    <div class="cat-header__image">
      <img src={image} alt={title} />
    </div>
  </div>
</section>

<style>
  .cat-header { background: #f5f5f4; overflow: hidden; }
  .cat-header__container { 
    max-width: 1400px; margin: 0 auto; display: grid; 
    grid-template-columns: 1fr 1fr; align-items: center; min-height: 450px; 
  }
  .cat-header__content { padding: 60px; }
  .cat-header__label { font-size: 12px; text-transform: uppercase; letter-spacing: 2px; color: #8b8b4b; font-weight: 700; }
  .cat-header__title { font-size: 56px; color: #1c1917; margin: 15px 0; font-weight: 700; }
  .cat-header__desc { color: #57534e; font-size: 18px; line-height: 1.6; max-width: 450px; }
  .cat-header__image img { width: 100%; height: 450px; object-fit: cover; }

  @media (max-width: 768px) {
    .cat-header__container { grid-template-columns: 1fr; }
    .cat-header__image { display: none; }
    .cat-header__title { font-size: 40px; }
  }
</style>