---
// components/about/AboutStats.astro
interface Stat {
  value: string;
  label: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<section class="about-stats">
  <div class="about-stats__container">
    <div class="about-stats__grid">
      
      {stats.map((stat) => (
        <div class="about-stats__item">
          <p class="about-stats__value">{stat.value}</p>
          <p class="about-stats__label">{stat.label}</p>
        </div>
      ))}

    </div>
  </div>
</section>

<style>
  .about-stats {
    padding: 80px 0;
  }

  .about-stats__container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .about-stats__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  .about-stats__item {
    text-align: center;
    padding: 30px 20px;
  }

  .about-stats__value {
    font-size: 56px;
    font-weight: 300;
    color: #8b8b4b;
  }

  .about-stats__label {
    font-size: 11px;
    color: #a8a29e;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-top: 20px;
  }

  @media (max-width: 768px) {
    .about-stats__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .about-stats__value {
      font-size: 40px;
    }

    .about-stats__container {
      padding: 0 30px;
    }
  }
</style>