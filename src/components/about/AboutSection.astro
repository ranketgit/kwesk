---
// components/about/AboutSection.astro
interface Props {
  label: string;
  title: string;
  paragraphs: string[];
}

const { label, title, paragraphs } = Astro.props;
---

<section class="about-section">
  <div class="about-section__container">
    <div class="about-section__grid">
      
      <div class="about-section__label-col">
        <span class="about-section__label">{label}</span>
      </div>

      <div class="about-section__content-col">
        <h2 class="about-section__title">{title}</h2>

        {paragraphs.map((p) => (
          <p class="about-section__text">{p}</p>
        ))}
      </div>

    </div>
  </div>
</section>

<style>
  .about-section {
    padding: 100px 0;
  }

  .about-section__container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .about-section__grid {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 80px;
  }

  .about-section__label {
    display: block;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #8b8b4b;
  }

  .about-section__title {
    font-size: 22px;
    font-weight: 600;
    color: #1c1917;
    line-height: 1.6;
  }

  .about-section__text {
    color: #78716c;
    line-height: 1.9;
    text-align: justify;
    margin-top: 40px;
  }

  @media (max-width: 768px) {
    .about-section__grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .about-section__container {
      padding: 0 30px;
    }
  }
</style>