---
const { name, type, image, href } = Astro.props;
---
<a href={href} class="product-card group">
  <div class="product-card__image">
    <img src={image} alt={name} />
  </div>
  <div class="product-card__info">
    <h3 class="product-card__name">{name}</h3>
    <p class="product-card__type">{type}</p>
  </div>
</a>

<style>
  .product-card { 
    text-decoration: none; 
    display: block; 
  }
  .product-card__image { 
    background: #f9f9f9; 
    aspect-ratio: 1/1; 
    overflow: hidden; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    margin-bottom: 15px;
  }
  .product-card__image img { 
    width: 80%; 
    transition: transform 0.5s ease; 
  }
  .product-card:hover .product-card__image img { 
    transform: scale(1.1); 
  }
  .product-card__name { 
    font-size: 16px; 
    font-weight: 700; 
    color: #1c1917; 
    margin: 0; 
  }
  .product-card__type { 
    font-size: 14px; 
    color: #78716c; 
    margin-top: 4px; 
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
</style>