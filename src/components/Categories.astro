---
const categories = [
  { title: "Bureaux", image: "/home-categories/desk.jpg", href: "/bureaux" },
  {
    title: "Chaises de Bureau",
    image: "/home-categories/chair.jpg",
    href: "/chaises",
  },
  {
    title: "Salles de Réunion",
    image: "/home-categories/reunion.jpg",
    href: "/salles-reunion",
  },
];
---

<section class="categories">
  <div class="categories__container">
    <h2 class="text-center mb-12 text-6xl">NOS CATÉGORIES</h2>

    <div class="categories__grid">
      <a href={categories[0].href} class="categories__card categories__card--large rounded-4xl">
        <img src={categories[0].image} alt={categories[0].title} />
        <div class="categories__overlay"></div>
        <div class="categories__card-content">
          <h3 class="categories__card-title">{categories[0].title}</h3>
          <span class="categories__card-link">Découvrir</span>
        </div>
      </a>

      <div class="categories__right">
        <a href={categories[1].href} class="categories__card rounded-4xl">
          <img src={categories[1].image} alt={categories[1].title} />
          <div class="categories__overlay"></div>
          <div class="categories__card-content">
            <h3 class="categories__card-title">{categories[1].title}</h3>
            <span class="categories__card-link">Découvrir</span>
          </div>
        </a>

        <a href={categories[2].href} class="categories__card rounded-4xl">
          <img src={categories[2].image} alt={categories[2].title} />
          <div class="categories__overlay"></div>
          <div class="categories__card-content">
            <h3 class="categories__card-title">{categories[2].title}</h3>
            <span class="categories__card-link">Découvrir</span>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .categories {
    padding: 120px 0;
    background-color: white;
  }

  .categories__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .categories__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  .categories__right {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .categories__card {
    position: relative;
    display: block;
    overflow: hidden;
    background-color: #1c1917;
    text-decoration: none;
  }

  .categories__card--large {
    height: 600px;
  }

  .categories__right .categories__card {
    height: 288px;
  }

  .categories__card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .categories__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 40%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 1;
    transition: opacity 0.3s ease;
  }

  .categories__card:hover img {
    transform: scale(1.1);
  }

  .categories__card:hover .categories__overlay {
    opacity: 0.8;
  }

  .categories__card-content {
    position: absolute;
    bottom: 40px;
    left: 40px;
    right: 40px;
    z-index: 2;
    pointer-events: none;
  }

  .categories__card-title {
    font-size: 28px;
    font-weight: 700;
    color: white;
    margin-bottom: 8px;
    line-height: 1.2;
  }

  .categories__card-link {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: color 0.3s ease;
  }

  .categories__card-link::after {
    content: "→";
    transition: transform 0.3s ease;
  }

  .categories__card:hover .categories__card-link {
    color: white;
  }

  .categories__card:hover .categories__card-link::after {
    transform: translateX(5px);
  }

  @media (max-width: 1024px) {
    .categories__card--large {
      height: 500px;
    }
    
    .categories__right .categories__card {
      height: 238px;
    }
    
    .categories__card-title { 
      font-size: 22px; 
    }
  }

  @media (max-width: 768px) {
    .categories__container { 
      padding: 0 24px; 
    }
    
    .categories__grid { 
      grid-template-columns: 1fr; 
    }
    
    .categories__card-content { 
      bottom: 24px; 
      left: 24px; 
    }
    
    .categories__card--large,
    .categories__right .categories__card {
      height: 320px;
    }
  }
</style>