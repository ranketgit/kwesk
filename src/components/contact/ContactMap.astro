<section class="contact-map">
    <div class="contact-map__container">
      <div class="contact-map__wrapper">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.2159037895!2d2.2944813156740938!3d48.87378577928921!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fc4f8f3049b%3A0xcbb47407434935db!2sAv.%20des%20Champs-%C3%89lys%C3%A9es%2C%20Paris%2C%20France!5e0!3m2!1sfr!2sfr!4v1634567890123!5m2!1sfr!2sfr"
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </section>
  
  <style>
    .contact-map {
      padding: 0;
    }
  
    .contact-map__container {
      max-width: 100%;
    }
  
    .contact-map__wrapper {
      width: 100%;
      height: 500px;
    }
  
    .contact-map__wrapper iframe {
      width: 100%;
      height: 100%;
    }
  
    @media (max-width: 768px) {
      .contact-map__wrapper {
        height: 350px;
      }
    }
  </style>