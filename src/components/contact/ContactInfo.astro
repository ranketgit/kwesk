---
// components/contact/ContactInfo.astro
---

<section class="contact-info">
    <div class="contact-info__container">
      <div class="contact-info__grid">
  
        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <h3 class="contact-info__title">Adresse</h3>
          <p class="contact-info__text">
            Bd de la corniche, Ain diab
<br/>
20180, Casablanca
          </p>
        </div>
  
        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
            </svg>
          </div>
          <h3 class="contact-info__title">Téléphone</h3>
          <p class="contact-info__text">
            +212 5 20 24 16 37<br/>
            +212 6 61 48 16 16
          </p>
        </div>
  
        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </div>
          <h3 class="contact-info__title">Email</h3>
          <p class="contact-info__text">
            contact@kwesk.com<br/>
            support@kwesk.com
          </p>
        </div>
  
        <div class="contact-info__item">
          <div class="contact-info__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
          </div>
          <h3 class="contact-info__title">Horaires</h3>
          <p class="contact-info__text">
            Lun - Ven: 9h00 - 18h00<br/>
            Sam: 9h00 - 12h00
          </p>
        </div>
  
      </div>
    </div>
  </section>
  
  <style>
    .contact-info {
      padding: 80px 0;
    }
  
    .contact-info__container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 60px;
    }
  
    .contact-info__grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 50px;
    }
  
    .contact-info__item {
      text-align: center;
      padding: 40px 25px;
    }
  
    .contact-info__icon {
      width: 50px;
      height: 50px;
      margin: 0 auto;
      color: #8b8b4b;
    }
  
    .contact-info__icon svg {
      width: 100%;
      height: 100%;
    }
  
    .contact-info__title {
      font-size: 18px;
      font-weight: 600;
      color: #1c1917;
      margin-top: 25px;
    }
  
    .contact-info__text {
      font-size: 14px;
      color: #78716c;
      line-height: 1.8;
      margin-top: 15px;
    }
  
    @media (max-width: 1024px) {
      .contact-info__grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  
    @media (max-width: 768px) {
      .contact-info__grid {
        grid-template-columns: 1fr;
        gap: 30px;
      }
  
      .contact-info__container {
        padding: 0 30px;
      }
  
      .contact-info__item {
        padding: 30px 20px;
      }
    }
  </style>